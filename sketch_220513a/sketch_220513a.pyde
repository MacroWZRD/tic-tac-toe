class cell():
    
    def __init__(self, x, y, s, tick):
        self.x = x
        self.y = y
        self.s = s
        self.tick = tick
        
    def show(self):
        rect(self.x, self.y, self.s, self.s)
        if self.tick != 0:
            image(self.tick, self.x, self.y)
        
    def tick_update(self, new_tick):
        if self.tick == 0:
            self.tick = new_tick
            return 1
        else:
            return 0
        
    def value(self):
        return self.x, self.y, self.s
        
