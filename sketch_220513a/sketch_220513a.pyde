def add_tick(tick, mx, my):
    for y in range(len(board)):
        for x in range(len(board[y])):
            bx, by, bs = board[y][x].value()
            if (mx > bx  and my > by) and (mx < bx + bs and my < by + bs): 
                v = board[y][x].tick_update(tick)
                break
    return v                
